@model ProjectViewModel;

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container">
    <div class="page">
        <h2 class="page-title fw-bold text-center">Edit Project</h2>
        <div class="page-content d-flex justify-content-center">
            <div class="page-form">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="Name" class="control-label fs-5">Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <label for="ImageFile" class="control-label fs-5">New Background</label>
                        <input asp-for="ImageFile" type="file" class="form-control form-control-lg" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <label class="control-label fs-5">Old Background</label>
                        <div>
                            <img width="210" src="@Model.Image" onerror="this.src = '/images/common/default-img-1.jpg'" alt=""/>
                        </div>
                    </div>
                    <div class="form-group mt-1">
                        <label for="StartDate" class="control-label fs-5">Start Date <span class="text-danger">*</span></label>
                        <input asp-for="StartDate" class="form-control form-control-lg" placeholder="Y/m/d" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <label for="EndDate" class="control-label fs-5">End Date <span class="text-danger">*</span></label>
                        <input asp-for="EndDate" class="form-control form-control-lg" laceholder="Y/m/d" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Status" class="control-label fs-5"></label>
                        <select asp-for="Status" class="form-control form-control-lg" asp-items="@Model.StatusOptions"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-action d-flex justify-content-center mt-2">
                        <div>
                            <a asp-action="Index" class="btn btn-lg btn-secondary text-decoration-none px-3">Back</a>
                        </div>
                        <div class="ms-2">
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-lg btn-danger text-decoration-none px-3">Delete</a>
                            <input type="submit" value="Update" class="ms-1 btn btn-lg btn-primary px-3"/>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
   
</div>

